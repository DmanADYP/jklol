@model IEnumerable<TOProjects.Models.Customer>

@{
    ViewBag.Title = "Customers";
}

<h2>Customers</h2>

<p>
    @Html.ActionLink("Create New", "Create")

    @using (Html.BeginForm())
    {
    <p>
        @Html.TextBox("SearchString", null, new { @title = "Find By Name", @Id = "FindByName", @class = "CustomerAutoComplete" })
        <input type="submit" value="Search" class="btn btn-primary" />
    </p>
    }

</p>
<table class="table table-striped">
    <tr>
        <th>
            Name
        </th>
        <th>
            Customer Insurance Information
        </th>
        <th>
            Send Credit Application
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustomerInsuranceInformation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SendCreditApplication)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
