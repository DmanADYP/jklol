@model TOProjects.Models.Customer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Customer</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            <label class="control-label col-md-2">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @name="Name" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Customer Insurance Information</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.CustomerInsuranceInformation, new { htmlAttributes = new { @class = "form-control", @name = "Customer Insurance Information" } })
                @Html.ValidationMessageFor(model => model.CustomerInsuranceInformation, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class= "control-label col-md-2" >Send Credit Application</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.SendCreditApplication)
                    @Html.ValidationMessageFor(model => model.SendCreditApplication, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
